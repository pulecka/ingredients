button.i-button
  min-width 150px
  font-weight 800
  color white
  border none
  line-height fieldHeight
  background-color rbBlueColor
  transition all .2s ease
  &:hover
    background-color lighten(rbBlueColor, 10)
    cursor pointer
  &.fill
    width 100%
  &.small
    min-width 100px
    line-height fieldHeight*0.5
  &:disabled,
  &.disabled
    background-color lighten(rbBlueColor, 30)
    cursor: not-allowed
  &:active
    outline none
    background-color hue(rbBlueColor, 50)

.i-row
  button.i-button
    margin-top fieldLabelHeight
